{
  "id": "https://yourdomain.ca/verified-id/manifest.json",
  "issuer": "did:web:yourdomain.ca",
  "name": "Government Employee Credential",
  "type": "EmployeeCredential",
  "version": "1.0.0",
  "presentation_definition": {
    "input_descriptors": [
      {
        "id": "gov_employee_info",
        "schema": "https://yourdomain.ca/verified-id/schema.json",
        "constraints": {
          "fields": [
            { "path": ["$.firstName"] }, { "path": ["$.lastName"] },
            { "path": ["$.email"] }, { "path": ["$.organization"] },
            { "path": ["$.employeeId"] }, { "path": ["$.department"] },
            { "path": ["$.role"] }, { "path": ["$.issuanceDate"] }
          ]
        }
      }
    ]
  }
}