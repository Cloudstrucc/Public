{% extends 'CS-Layout-1-Column-with-Left-Nav' %}

{% block navigation %} 

{% assign current_page = current_page | default: page %}
{% assign parent_page = current_page.parent %}

{% if parent_page %}
{% assign weblink_set_name = parent_page.name %}
  
      {% assign weblink_set_name = page.mspp_navigation.name %}
      {% include "CS-Weblink-List-Group-Left" weblink_set_name: parent_page.name showdescriptions: true %}
  
{% endif %}

{% endblock %}

{% block main %}
  {% include 'CS-Validation-Wizard-Step'%}
  {% include 'Page Copy' %}   

  {% if page.mspp_entitylist %}
    {% include 'entity_list' key: page.mspp_entitylist.id %}
  {% endif %}
  
  {% if page.mspp_entityform %}
  <style>
  h2 {
    display: block;
    font-size: 1.3em;
    margin-top: 1em;
    margin-bottom: 1em;
    margin-left: 0;
    margin-right: 0;
    font-weight: bold;
  }
</style>
    
    {% entityform id: page.mspp_entityform.id %}

 <script>
       
     //  jQuery(".instructions").detach().appendTo('#instructions');
       jQuery(".validation-summary").detach().appendTo('#step-validation-header')       
 
 </script>
 
  {% endif %}
  
  {% if page.mspp_webform %}
    {% webform id: page.mspp_webform.id %}
  {% endif %}

{% endblock %}

{% block nextPrevious %}
  {% if parent_page %}
    {% include "CS-Web-Link-Button" weblink_set_name: parent_page.name %}
  {% endif %}
{% endblock %}